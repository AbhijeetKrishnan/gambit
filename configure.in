dnl Process this file with autoconf to produce a configure script.
AC_INIT(sources/game/game.h)
AM_INIT_AUTOMAKE(gambit, 0.97.1.3)
dnl AM_CONFIG_HEADER(config.h)

dnl User-specified options
AC_ARG_WITH(gmp,
[  --with-gmp                Use GNU mp for multiple-precision math ],
  AC_DEFINE(USE_GNU_MP, 1)
  GMP_LIBS="-lgmp")
AC_SUBST(GMP_LIBS)

dnl Checks for programs.
AC_PROG_CC
AC_PROG_CXX
AC_PROG_LIBTOOL

dnl Check for Python
dnl We've only tested with 2.3, so this is what it looks for.
dnl The wrappers may well work with earlier versions.
AM_PATH_PYTHON(2.3,, :)

dnl Guessing that Python is in /usr or /usr/local: is it possible to
dnl autodetect this somehow?
PYTHON_INCLUDES="-I/usr/include/python${PYTHON_VERSION} -I/usr/local/include/python${PYTHON_VERSION} -I.."
AC_SUBST(PYTHON_INCLUDES)

CXXFLAGS="$CXXFLAGS -Wall"

AC_OUTPUT(Makefile sources/Makefile \
          sources/base/Makefile \
          sources/math/Makefile \
          sources/numerical/Makefile \
          sources/game/Makefile \
	  sources/pelican/Makefile \
	  sources/poly/Makefile \
	  sources/nash/Makefile \
	  sources/python/Makefile \
          efg/Makefile nfg/Makefile \
	  scripts/Makefile scripts/python/Makefile)


