#/bin/sh
# SCCS Version $Id$ 

echo This program will check and possibly update you Gambit GUI configuration
echo file: ~/.gambit.ini
if (-f ~/.gambit.ini) then
	echo Previous Gambit GUI init file found.
else 
	echo Creating a new Gambit GUI init file
	cp ./gambit.ini ~/.gambit.ini
endif
grep -s "Root-Dir" ~/.gambit.ini
if ($status) then
	echo Setting the local install dir to : `pwd`
	echo "Install.Root-Dir:       " `pwd` >> ~/.gambit.ini
	echo Setting the local help dir to : `pwd`/manual/
	echo "Install.Help-Dir:       " `pwd`/manual/ >> ~/.gambit.ini
else
	echo Local dir variables already set, no changes made
endif
