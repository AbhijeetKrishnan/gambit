//                    MixedStrategyProfile<T> member functions
//---------------------------------------------------------------------------

template <class T> MixedStrategyProfile<T>::MixedStrategyProfile(const StrategySupport &s)
  : gbtPVector<T>(s.NumStrats()), support(s)
{
  SetCentroid();
}

template <class T> MixedStrategyProfile<T>::MixedStrategyProfile(const MixedStrategyProfile<T> &p)
  : gbtPVector<T>(p), support(p.support)
{ }

template <class T>
MixedStrategyProfile<T> &MixedStrategyProfile<T>::operator=(const MixedStrategyProfile<T> &p)
{
  if (this != &p && support == p.support)   {
    // note that a dimensionality change will trigger a failed assertion
    // in the gbtPVector assignment operator
    support = p.support;
    gbtPVector<T>::operator=(p);
  }
  return *this;
}

template <class T> void MixedStrategyProfile<T>::SetCentroid(void) 
{
  T center;
  
  for (int i = 1; i <= support.GetGame()->NumPlayers(); i++)  {
    center = ((T) 1) / ((T) support.NumStrats(i));
    for (int j = 1; j <= support.NumStrats(i); j++)
      this->svptr[i][j] = center;
  }
}

template <class T> T MixedStrategyProfile<T>::GetLiapValue(void) const
{
  static const T BIG1 = (T) 100;
  static const T BIG2 = (T) 100;

  MixedStrategyProfile<T> p(*this);
  ((gbtVector<T> &) p).operator=(*this);
  MixedStrategyProfile<T> tmp(p);
  gbtPVector<T> payoff(p);
  T x, result((T) 0), avg, sum;
  payoff = (T) 0;

  for(int i = 1; i <= support.GetGame()->NumPlayers(); i++) {
    tmp.CopyRow(i, payoff);
    avg = sum = (T) 0;
    // then for each strategy for that player set it to 1 and evaluate
    int j;
    for (j = 1; j <= p.GetSupport().NumStrats(i); j++) {
      tmp(i, j) = (T) 1;
      x = p(i, j);
      payoff(i, j) = tmp.GetPayoff(i);
      avg += x * payoff(i, j);
      sum += x;
      if (x>(T)0) x=0;
      result += BIG1*x*x;         // add penalty for neg probabilities
      tmp(i,j) = (T) 0;
    }
    tmp.CopyRow(i, p);
    for(j=1;j<=p.GetSupport().NumStrats(i);j++) {
      x=payoff(i,j)-avg;
      if (x<=(T)0) x=(T)0;
      result += x*x;          // add penalty if not best response
    }
    x=sum - ((T) 1);
    result += BIG2*x*x ;          // add penalty for sum not equal to 1
  }
  return result;
}

template <class T> T MixedStrategyProfile<T>::GetPayoff(int pl) const
{
  if (support.GetGame()->IsTree()) {
    return MixedBehavProfile<T>(*this).GetPayoff(pl);
  }
  else {
    return PPayoff(pl, 1, 1);
  }
}

template <class T>
T MixedStrategyProfile<T>::GetPayoff(int pl, int player1, int strat1) const
{
  if (support.GetGame()->IsTree()) {
    MixedStrategyProfile<T> foo(*this);
    for (int st = 1; st <= support.NumStrats(player1); st++) {
      foo(player1, st) = (T) 0;
    }
    foo(player1, strat1) = (T) 1;
    return foo.GetPayoff(pl);
  }
  else {
    T value = (T) 0;
    PPayoff(pl, player1, strat1, 1,
	    support.GetStrategy(player1, strat1)->m_index + 1, (T) 1, value);
    return value;
  }
}

template <class T> T
MixedStrategyProfile<T>::GetPayoff(int pl, const Gambit::GameStrategy &strategy) const
{
  if (support.GetGame()->IsTree()) {
    return GetPayoff(pl, strategy->GetPlayer()->GetNumber(), 
		     support.GetIndex(strategy));
  }
  else {
    T value = (T) 0;
    PPayoff(pl, strategy->GetPlayer()->GetNumber(), strategy->GetNumber(), 1,
	    strategy->m_index + 1, (T) 1, value);
    return value;
  }
}

template <class T> T
MixedStrategyProfile<T>::GetPayoff( int pl, int player1, int strat1, int player2,
			       int strat2 ) const
{
  if (player1 == player2) return (T) 0;


  if (support.GetGame()->IsTree()) {
    MixedStrategyProfile<T> foo(*this);
    for (int st = 1; st <= support.NumStrats(player1); st++) {
      foo(player1, st) = (T) 0;
    }
    foo(player1, strat1) = (T) 1;

    for (int st = 1; st <= support.NumStrats(player2); st++) {
      foo(player2, st) = (T) 0;
    }
    foo(player2, strat2) = (T) 1;

    return foo.GetPayoff(pl);
  }
  else {
    T value = (T) 0;
    PPayoff(pl, player1, strat1, player2, strat2, 1,
	    support.GetStrategy(player1, strat1)->m_index +
	    support.GetStrategy(player2, strat2)->m_index + 1,
	    (T) 1, value);
    return value;
  }
}

template <class T>
bool MixedStrategyProfile<T>::operator==(const MixedStrategyProfile<T> &mp) const
{
  return (support == mp.support && 
	  (const gbtPVector<T> &) *this == (const gbtPVector<T> &) mp);
}

