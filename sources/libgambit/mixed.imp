// Private Mixed Profile Members
//--------------------------------------

template <class T>
T MixedStrategyProfile<T>::PPayoff(int pl, int index, int i) const
{
  Gambit::GameStrategyRep *s;
  int pindex = 0;

  if (i > support.GetGame()->NumPlayers())  {
    if (support.GetGame()->m_results[index]) {
      return support.GetGame()->m_results[index]->GetPayoff(pl);
    }
    else {
      return (T) 0;
    }
  }
  T sum = (T) 0;
  for (int j = 1; j <= support.NumStrats(i); j++) {
    s = support.GetStrategy(i, j);
    if ((*this)(i, j) != (T) 0) {
      index += s->m_index - pindex;
      pindex = s->m_index;
      sum += (*this)(i, j) * PPayoff(pl, index, i + 1);
    }
  }
  return sum;
}

template <class T>
void MixedStrategyProfile<T>::PPayoff(int pl, int const_pl, int const_st,
				int cur_pl, long index, T prob, T &value) const
{
  Gambit::GameStrategyRep *s;

  if (cur_pl == const_pl)
    PPayoff(pl, const_pl, const_st, cur_pl + 1, index,
	    prob, value);
  else if (cur_pl > support.GetGame()->NumPlayers())  {
    if (support.GetGame()->m_results[index]) {
      value += prob * support.GetGame()->m_results[index]->GetPayoff(pl);
    }
  }
  else   {
    for (int j = 1; j <= support.NumStrats(cur_pl); j++)  {
      s = support.GetStrategy(cur_pl, j);
      if ((*this)(cur_pl, j) > (T) 0)
	PPayoff(pl, const_pl, const_st, cur_pl + 1,
		index + s->m_index, prob * (*this)(cur_pl, j), value);
    }
  }
}


template <class T>
void MixedStrategyProfile<T>::PPayoff(int pl, int const_pl1, int const_st1,
				int const_pl2, int const_st2,
				int cur_pl, long index, T prob, T &value) const
{
  Gambit::GameStrategyRep *s;

  if (cur_pl == const_pl1 || cur_pl == const_pl2)
    PPayoff(pl, const_pl1, const_st1, const_pl2, const_st2,
	    cur_pl + 1, index,prob, value);
  else if (cur_pl > support.GetGame()->NumPlayers())  {
    if (support.GetGame()->m_results[index]) {
      value += prob * support.GetGame()->m_results[index]->GetPayoff(pl);
    }
  }
  else   {
    for (int j = 1; j <= support.NumStrats(cur_pl); j++ ) {
      s = support.GetStrategy(cur_pl, j);
      if ((*this)(cur_pl, j) > (T) 0)
	PPayoff(pl, const_pl1, const_st1, const_pl2, const_st2,
		cur_pl + 1, index + s->m_index, prob * (*this)(cur_pl, j),
		value);
    }
  }
}

template <class T>
void MixedStrategyProfile<T>::PPayoff(int pl, int const_pl, int cur_pl, long index, 
			   T prob, gbtVector<T> &value) const
{
  Gambit::GameStrategyRep *s;

  if (cur_pl == const_pl)
    PPayoff(pl, const_pl, cur_pl + 1, index,
	   prob, value);
  else if (cur_pl > support.GetGame()->NumPlayers())  {
    for (int j = 1; j <= support.NumStrats(const_pl); j++ ){ 
      s = support.GetStrategy(const_pl, j);
      if (support.GetGame()->m_results[index + s->m_index]) {
	value[j] += prob * support.GetGame()->m_results[index + s->m_index]->GetPayoff(pl);
      }
    }
  }
  else   {
    for (int j = 1; j <= support.NumStrats(cur_pl); j++) {
      s = support.GetStrategy(cur_pl, j);
      if ((*this)(cur_pl, j) > (T) 0)
	PPayoff(pl, const_pl, cur_pl + 1,
			 index + s->m_index, prob * (*this)(cur_pl, j), value);
    }
  }
}

template <class T>
MixedStrategyProfile<T>::MixedStrategyProfile(const MixedBehavProfile<T> &p_profile)
  : gbtPVector<T>(p_profile.GetGame()->NumStrategies()),
    support(p_profile.GetGame())
{
  Gambit::Game efg = p_profile.GetGame();
  for (int pl = 1; pl <= support.GetGame()->NumPlayers(); pl++)  {
    for (int st = 1; st <= support.GetGame()->GetPlayer(pl)->NumStrategies(); st++)  {
      T prob = (T) 1;

      for (int iset = 1; iset <= efg->GetPlayer(pl)->NumInfosets(); iset++) {
	if (efg->m_players[pl]->m_strategies[st]->m_behav[iset] > 0)
	  prob *= p_profile(pl, iset, efg->m_players[pl]->m_strategies[st]->m_behav[iset]);
      }
      (*this)(pl, st) = prob;
    }
  }
}

