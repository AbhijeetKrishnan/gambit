#include "base/base.h"
#include "gsmatrix.h"
#include "gmath.h"   // for abs(double)

//-----------------------------------------------------------------------------
//     gbtSquareMatrix<T>: Constructors, destructor, constructive operators
//-----------------------------------------------------------------------------

template <class T> gbtSquareMatrix<T>::gbtSquareMatrix(void)   { }

template <class T> gbtSquareMatrix<T>::gbtSquareMatrix(int size)
  : gbtMatrix<T>(size, size)
{ }

template <class T> gbtSquareMatrix<T>::gbtSquareMatrix(const gbtMatrix<T> &M)
  : gbtMatrix<T>(M)
{ 
  if (M.NumRows() != M.NumColumns()) throw gbtDimensionException();
}

template <class T> gbtSquareMatrix<T>::gbtSquareMatrix(const gbtSquareMatrix<T> &M)
  : gbtMatrix<T>(M)
{ }

template <class T> gbtSquareMatrix<T>::~gbtSquareMatrix()   { }

template <class T>
gbtSquareMatrix<T> &gbtSquareMatrix<T>::operator=(const gbtSquareMatrix<T> &M)
{
  gbtMatrix<T>::operator=(M);
  return *this;
}

//-----------------------------------------------------------------------------
//                gbtSquareMatrix<T>: Public member functions
//-----------------------------------------------------------------------------

template <class T> gbtSquareMatrix<T> gbtSquareMatrix<T>::Inverse(void) const
{
  if (mincol != minrow || maxcol != maxrow) throw gbtDimensionException();

  gbtSquareMatrix<T> copy(*this);
  gbtSquareMatrix<T> inv(maxrow);

  // initialize inverse matrix and prescale row vectors
  for (int i = minrow; i <= maxrow; i++)   {
    T max= (T) 0;
    for (int j = mincol; j <= maxcol; j++)  {
      T abs = copy.data[i][j];
      if (abs < (T) 0)
	abs = -abs;
      if (abs > max)
	max = abs;
    }

    if (max == (T) 0)  throw gbtSingularMatrixException();

    T scale = (T) 1 / max;
    for (int j = mincol; j <= maxcol; j++)  {
      copy.data[i][j] *= scale;
      if (i == j)
	inv.data[i][j] = scale;
      else
	inv.data[i][j] = (T) 0;
    }
  }

  for (int i = mincol; i <= maxcol; i++)  {
    // find pivot row
    T max = copy.data[i][i];
    if (max < (T) 0)
      max = -max;
    int row = i;
    for (int j = i + 1; j <= maxrow; j++)  {
      T abs = copy.data[j][i];
      if (abs < (T) 0)
	abs = -abs;
      if (abs > max)  {
	max = abs;
	row = j;
      }
    }
    
    if (max <= (T) 0)  throw gbtSingularMatrixException();

    copy.SwitchRows(i, row);
    inv.SwitchRows(i, row);
    // scale pivot row
    T factor = (T) 1 / copy.data[i][i];
    for (int k = mincol; k <= maxcol; k++)  {
      copy.data[i][k] *= factor;
      inv.data[i][k] *= factor;
    }

    // reduce other rows
    for (int j = minrow; j <= maxrow; j++)  {
      if (j != i)  {
	T mult = copy.data[j][i];
	for (int k = mincol; k <= maxcol; k++)  {
	  copy.data[j][k] -= copy.data[i][k] * mult;
	  inv.data[j][k] -= inv.data[i][k] * mult;
	}
      }
    }
  } 

  return inv;
}

template <class T> T gbtSquareMatrix<T>::Determinant(void) const
{
  T factor = (T) 1;
  gbtSquareMatrix<T> M(*this);
  
  for (int row = minrow; row <= maxrow; row++)  {

    // Experience (as of 3/22/99) suggests that, in the interest of
    // numerical stability, it might be best to do Gaussian
    // elimination with respect to the row (of those feasible)
    // whose entry has the largest absolute value.
    int swap_row = row;
    for (int i = row+1; i <= maxrow; i++) {
      if (fabs(M.data[i][row]) > fabs(M.data[swap_row][row]))
	swap_row = i;
    }

    if (swap_row != row)  {
      M.SwitchRows(row, swap_row);
      for (int j = mincol; j <= maxcol; j++)
	M.data[row][j] *= (T) -1;
    }

    if (M.data[row][row] == (T)0) return (T)0;

    // now do row operations to clear the row'th column
    // below the diagonal
    for (int row1 = row+1; row1 <= maxrow; row1++)
      {
	factor = -M.data[row1][row]/M.data[row][row];
	for (int i = mincol; i <= maxcol; i++)
	  M.data[row1][i] += M.data[row][i]*factor;
      }
  }

  // finally we multiply the diagonal elements
  T det = (T) 1;
  for (int row = minrow; row <= maxrow; row++)    det *= M.data[row][row];
  return det;
}

template <class T>
std::ostream &operator<<(std::ostream &to, const gbtSquareMatrix<T> &M)
{
  to << (gbtMatrix<T>)M; return to;
}
