template <class T>
int Basis<T>::Pivot(int outindex, int col)
{
  if ( col < 0 ) 
    assert(A->CheckRow(-col) );
  else if ( col > A->MaxCol() )
    assert ( col > A->MaxCol() && 
	    col <= A->MaxCol() + artificial.Length() && 
	    A->CheckRow( artificial[col - A->MaxRow()] ) );
  else 
    assert( A->CheckColumn(col) );

  int outlabel = label[outindex];
 
  if ( -col >= A->MinRow() && -col <= A->MaxRow() ) rows[-col] = outindex;
  else if ( col >= A->MinCol() && col <= A->MaxCol() ) cols[col] = outindex;
  else if ( col > A->MaxCol() && col <= A->MaxCol() + artificial.Length() ) 
    arts[col - A->MaxCol()] = outindex;
  else assert(0); // not a valid column to pivot in.
  
  if ( -outlabel >= A->MinRow() && -outlabel <= A->MaxRow() ) 
    rows[-outlabel] = 0;
  else if ( outlabel >= A->MinCol() && outlabel <= A->MaxCol() ) 
    cols[outlabel] = 0;
  else if ( outlabel > A->MaxCol() && 
	   outlabel <= A->MaxCol() + artificial.Length() ) 
    arts[outlabel - A->MaxCol()] = 0;
  else assert(0); // not a valid column to pivot in.
  
  label[outindex] = col;
  CheckBasis();
  
  return outlabel;
}

template <class T>
bool Basis<T>::Member( int col ) const
{
  int ret;

  if ( -col >= A->MinRow() && -col <= A->MaxRow() ) ret = rows[-col];
  else if ( col >= A->MinCol() && col <= A->MaxCol() ) ret = cols[col];
  else if ( col > A->MaxCol() && col <= A->MaxCol() + artificial.Length() ) 
    ret = arts[col - A->MaxCol()];
  else ret = 0;

  return (ret != 0);
}


template <class T>
int Basis<T>::Find( int col ) const
{
  int ret;

  if ( -col >= A->MinRow() && -col <= A->MaxRow() ) ret = rows[-col];
  else if ( col >= A->MinCol() && col <= A->MaxCol() ) ret = cols[col];
  else if ( col > A->MaxCol() && col <= A->MaxCol() + artificial.Length() ) 
    ret = arts[col - A->MaxCol()];
  else ret = 0;
  
  assert (ret != 0);
  return ret;
}

template <class T>
int Basis<T>::Label(int index) const
{
  return  label[index];
}

template <class T>
void Basis<T>::Mark(int col )
{
  if ( -col >= A->MinRow() && -col <= A->MaxRow() ) 
    rowBlocked[-col] = !rowBlocked[-col];
  else if ( col >= A->MinCol() && col <= A->MaxCol() ) 
    colBlocked[col] = !colBlocked[col];
}

template <class T>
bool Basis<T>::IsBlocked(int col) const
{
  if ( -col >= A->MinRow() && -col <= A->MaxRow() ) 
    return rowBlocked[-col];
  else if ( col >= A->MinCol() && col <= A->MaxCol() ) 
    return colBlocked[col];
  return false;
}

template <class T>
void Basis<T>::BasisSelect(const gVector<T> &rowv, gVector<T> &colv) const
{
  assert(A->CheckColumn(colv) && A->CheckRow(rowv));

  for(int i=label.First(); i<=label.Last(); i++) {
    if(label[i]<0)
      colv[i]= 0;
    else
      colv[i]= rowv[label[i]];
  }
}

template <class T>
void Basis<T>::BasisSelect(const gVector<T> &unitv,
			   const gVector<T> &rowv,
			   gVector<T> &colv ) const
{
  assert(A->CheckColumn(colv)
	 && A->CheckColumn(unitv)
	 && A->CheckRow(rowv) );
  
  for(int i=label.First(); i<=label.Last(); i++) {
    if(label[i]<0)
      colv[i]= unitv[-label[i]];
    else
      colv[i]= rowv[label[i]];
  }
}

template <class T> 
bool Basis<T>::IsSpecialColumn( int col )
{
  return ( (-col >= label.First() && -col <= label.Last()) ||
	  ( col > A->MaxCol() && col <= A->MaxCol() + artificial.Length()) ); 
}
 
template <class T>
void Basis<T>::GetColumn( int col, gVector<T> &ret ) 
{
  
  if ( IsSpecialColumn( col ) ) {
    if ( col < 0 ) {
      ret = (T) 0;
      ret[-col] = (T) 1;
    }
    else { // its an artificial variable
      ret = (T) 0;
      ret[col - A->MaxCol()] = (T) 1;
    }
  }
  else 
    A->GetColumn(col, ret);
  
}


template <class T>
int Basis<T>::InsertArtificial( int art, int col )
{
  arts[ arts.Insert( art, col - A->MaxCol() ) ] = 0;
  return ( artificial.Insert( art, col - A->MaxCol() ) + A->MaxCol() );
}

template <class T>
int Basis<T>::AppendArtificial( int art )
{
  arts[ arts.Append(art) ] = 0;
  return ( artificial.Append( art ) + A->MaxCol() );
}

template <class T>
int Basis<T>::RemoveArtificial( int col )
{
  arts.Remove(col);
  return artificial.Remove( col - A->MaxCol() );
}

template <class T>
void Basis<T>::FlushArtificial()
{
  arts.Flush();
  artificial.Flush();
}

template <class T>
int Basis<T>::LastArtificial()
{
  return ( artificial.Last() + A->MaxCol() );
}

