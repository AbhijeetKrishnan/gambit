template <class T> 
Basis<T>::Basis(const gMatrix<T> &mat)
: A(&mat), label( mat.MinRow(), mat.MaxRow() ), 
  cols( mat.MinCol(), mat.MaxCol() ), rows( mat.MinRow(), mat.MaxRow() ), 
  arts(), artificial(),colBlocked(mat.MinCol(), mat.MaxCol() ),
  rowBlocked( mat.MinRow(), mat.MaxRow() )
{

  int i;
  for(i = mat.MinCol(); i <= mat.MaxCol(); i++) {
    cols[i] = 0;
    colBlocked[i] = false;
  }

  for(i = label.First(); i <= label.Last(); i++) {
    label[i]= - i;
    rows[i] = i;
    rowBlocked[i] = false;
  }
  IsBasisIdent = true;
}

template <class T>
Basis<T>::Basis(const Basis<T> &bas)
: A(bas.A), label(bas.label), cols( bas.cols ), rows( bas.rows ),
  arts(bas.arts), artificial(bas.artificial),
  colBlocked(bas.colBlocked),rowBlocked(bas.rowBlocked),
  IsBasisIdent(bas.IsBasisIdent)
{ }

template <class T>
Basis<T>::~Basis()
{ }

template <class T>
Basis<T>& Basis<T>::operator=(const Basis<T> &orig)
{
  if(this != &orig) {
    A = orig.A;
    label = orig.label; 
    cols = orig.cols;
    rows = orig.rows;
    arts = orig.arts;
    artificial = orig.artificial;
    rowBlocked = orig.rowBlocked;
    colBlocked = orig.colBlocked;
    IsBasisIdent = orig.IsBasisIdent;

  }
  return *this;
}


