#include "base/base.h"
#include "math/gpvector.h"
#include "game/game.h"
#include "nfglcp.h"

template <class T> gbtMatrix<T> Make_A1(const gbtGame &,
				      const gbtNfgSupport &, const T &);
template <class T> gbtVector<T> Make_b1(const gbtGame &,
				      const gbtNfgSupport &, const T &);
template <class T> gbtMatrix<T> Make_A2(const gbtGame &,
				      const gbtNfgSupport &, const T &);
template <class T> gbtVector<T> Make_b2(const gbtGame &,
				      const gbtNfgSupport &, const T &);


//---------------------------------------------------------------------------
//                      gbtNfgNashLcp: member functions
//---------------------------------------------------------------------------

template <class T> 
gbtList<MixedSolution> gbtNfgNashLcp<T>::Solve(const gbtNfgSupport &p_support,
					     gbtStatus &p_status)
{
  gbtBasicFeasibleSolution<T> cbfs((T) 0);

  if (p_support->NumPlayers() != 2) {
    return gbtList<MixedSolution>();
  }

  gbtList<gbtBasicFeasibleSolution<T> > bfsList;

  try {
    gbtMatrix<T> A1 = Make_A1(p_support->GetGame(), p_support, (T) 0);
    gbtVector<T> b1 = Make_b1(p_support->GetGame(), p_support, (T) 0);
    gbtMatrix<T> A2 = Make_A2(p_support->GetGame(), p_support, (T) 0);
    gbtVector<T> b2 = Make_b2(p_support->GetGame(), p_support, (T) 0);
    gbtLemkeHowsonTableau<T> B(A1,A2,b1,b2);
    if (m_stopAfter != 1) {
      AllLemke(p_support,0,B,bfsList,m_maxDepth, p_status);
    }
    else  {
      B.LemkePath(1);
      AddBfs(B, bfsList);
    }

    return AddSolutions(p_support, bfsList, B.Epsilon());
  }
  catch (gbtSignalBreak &E) {
    // for now, we won't give *any* solutions -- but we should list
    // any solutions found!
    throw;
  }
  // any other exceptions will propagate out.
}

template <class T> int gbtNfgNashLcp<T>::AddBfs(gbtLemkeHowsonTableau<T> &p_tableau,
					      gbtList<gbtBasicFeasibleSolution<T> > &p_list)
{
  gbtBasicFeasibleSolution<T> cbfs((T) 0);
  cbfs = p_tableau.GetBFS();
  if ((m_stopAfter > 0 && p_list.Length() > m_stopAfter) ||
      p_list.Contains(cbfs)) {  
    return 0;
  }
  p_list.Append(cbfs);
  return 1;
}

//
// AllLemke finds all accessible Nash equilibria by recursively 
// calling itself.  List maintains the list of basic variables 
// for the equilibria that have already been found.  
// From each new accessible equilibrium, it follows
// all possible paths, adding any new equilibria to the List.  
//
template <class T> void gbtNfgNashLcp<T>::AllLemke(const gbtNfgSupport &p_support,
					    int j, gbtLemkeHowsonTableau<T> &B,
					    gbtList<gbtBasicFeasibleSolution<T> > &p_list,
					    int depth,
					    gbtStatus &p_status)
{
  if (m_maxDepth != 0 && depth > m_maxDepth) {
    return;
  }

  if (!AddBfs(B, p_list)) {
    return;
  }
  
  for (int i = B.MinCol(); 
       i <= B.MaxCol() &&
       (m_stopAfter==0 || (p_list.Length()-1) < m_stopAfter);
       i++) {
    p_status.Get();
    if (i != j)  {
      int len = p_list.Length() - 1;
      double p1 = (double) len / (double) (len+1);
      double p2 = (double) (len+1) / (double) (len+2);
      double aa = (double) i / (double) (B.MaxCol() - B.MinCol());
      p_status.SetProgress(p1 + aa * (p2 - p1));
      gbtLemkeHowsonTableau<T> Bcopy(B);
      Bcopy.LemkePath(i);
      AllLemke(p_support,i,Bcopy, p_list, depth+1, p_status);
    }
  }
  return;
}

template <class T>
gbtList<MixedSolution> gbtNfgNashLcp<T>::AddSolutions(const gbtNfgSupport &p_support,
					     const gbtList<gbtBasicFeasibleSolution<T> > &p_list,
					     const T &epsilon)
{
  int i,j;
  int n1 = p_support->GetPlayer(1)->NumStrategies();
  int n2 = p_support->GetPlayer(2)->NumStrategies();
  gbtList<MixedSolution> solutions;

  for (i = 1; i <= p_list.Length(); i++)    {
    gbtMixedProfile<T> profile(p_support);
    T sum = (T) 0;

    for (j = 1; j <= n1; j++)
      if (p_list[i].IsDefined(j))   sum += p_list[i](j);

    if (sum == (T) 0)  continue;

    for (j = 1; j <= n1; j++) 
      if (p_list[i].IsDefined(j))   profile(1, j) = p_list[i](j) / sum;
      else  profile(1, j) = (T) 0;

    sum = (T) 0;

    for (j = 1; j <= n2; j++)
      if (p_list[i].IsDefined(n1 + j))  
	sum += p_list[i](n1 + j);

    if (sum == (T) 0)  continue;

    for (j = 1; j <= n2; j++)
      if (p_list[i].IsDefined(n1 + j))
	profile(2, j) = p_list[i](n1 + j) / sum;
      else
	profile(2, j) = (T) 0;

    int index = solutions.Append(MixedSolution(profile, "Lcp[NFG]"));
    solutions[index].SetEpsilon(epsilon);
  }

  return solutions;
}

//-------------------------------------------------------------------------
//                    gbtNfgNashLcp<T>: Member functions
//-------------------------------------------------------------------------

template <class T>
gbtNfgNashLcp<T>::gbtNfgNashLcp(void)
  : m_stopAfter(1), m_maxDepth(0)
{ }
