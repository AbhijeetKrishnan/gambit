template<class T> gPoly<T> operator*(const T val, const gPoly<T> poly)
{
  gPoly<T> prod(poly);
  prod *= val;
  return prod;
}

template<class T> gPoly<T> operator*(const gPoly<T> poly, const T val)
{
  return val * poly;
}

template <class T> gOutput& operator<<(gOutput &f, const gPoly<T> &p)
{
  gString s;
  if (p.Terms.Length() == 0) s += "0";
  else {
    for (int i = 1; i <= p.Terms.Length(); i++)
      {
	if (p.Terms[i].Coef() < (T)0) s += "- ";
	else if (i > 1) s += "+ ";
	
	if ( (p.Terms[i].Coef() != (T)1 && -p.Terms[i].Coef() != (T)1) ||
	    p.Terms[i].IsConstant() )
	  if (p.Terms[i].Coef() < (T)0) 
	    s += p.GetCoefToString(-p.Terms[i].Coef());
	  else                        
	    s += p.GetCoefToString( p.Terms[i].Coef());
	
	for (int j = 1; j <= p.Space->Dmnsn(); j++) {
	  int exp = p.Terms[i].ExpV() [j];
	  if (exp > 0) {
	    s += (*p.Space)[j]->Name;
	    if (exp != 1) {
	      s += '^';
	      s += ToString(exp);
	    }
	  }
	}
	
	if (i < p.Terms.Length()) s += " ";
      }
  }
  if (s == "") s = " 0";

  f << s; return f;
}


